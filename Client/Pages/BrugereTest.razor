@page "/brugere"
@using Milj√∏festivalen.Shared
@using System.Net.Http.Json
@inject HttpClient Http

<h1>Brugere List</h1>

@if (Brugere == null)
{
    <p><em>Loadingdd...</em></p>
}
else
{
    <ul>
        @foreach (var bruger in Brugere)
        {
            <li>@bruger.Brugernavn</li>
        }
    </ul>
}

@code {
    private List<Bruger> Brugere;

    protected override async Task OnInitializedAsync()
    {
        Brugere = await Http.GetFromJsonAsync<List<Bruger>>("api/brugere");
    }
}
