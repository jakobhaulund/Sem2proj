@page "/brugere"
@using Milj√∏festivalen.Shared
@using System.Net.Http.Json
@inject HttpClient Http

<h1>Brugere List</h1>

@if (brugere == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <ul>
        @foreach (var bruger in brugere)
        {
            <li>@bruger.FuldeNavn</li>
        }
    </ul>
}

@code {
    private List<Bruger> brugere;

    protected override async Task OnInitializedAsync()
    {
        brugere = await Http.GetFromJsonAsync<List<Bruger>>("api/brugere");
    }
}